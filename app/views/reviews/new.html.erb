<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>Add a review for <%= @restaurant.name %></h2>

      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>


    </div>
  </div>
</div>

